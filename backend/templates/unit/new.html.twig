{% extends 'base.html.twig' %}
{% block title %}Nouveau test unitaire{% endblock %}
{% block body %}
<h1 class="mb-3">Nouveau test unitaire</h1>
{{ form_start(form) }}
  {{ form_row(form.name) }}
  {{ form_row(form.folder) }}
  <div class="mb-3">
  <label class="form-label">Définition des tests (JSON)</label>
    {{ form_widget(form.testsJson) }}
    <div class="form-text">Définissez un tableau d'objets: [{ name, method, url, headers?, body?, assert: { status?, contains?, json?: { path, equals } } }]</div>
  </div>
  <button class="btn btn-primary">Créer</button>
  <a href="{{ path('unit_index') }}" class="btn btn-secondary">Annuler</a>
{{ form_end(form) }}
{% endblock %}
