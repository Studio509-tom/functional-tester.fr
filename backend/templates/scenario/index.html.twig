{% extends 'base.html.twig' %}
{% block title %}Scénarios{% endblock %}
{% block body %}
<div class="d-flex justify-content-between align-items-center mb-3">
  <h1>Scénarios</h1>
  <div class="d-flex gap-2">
    <a href="{{ path('folder_index') }}" class="btn btn-outline-secondary">Dossiers</a>
    <a href="{{ path('scenario_new') }}" class="btn btn-primary">Nouveau scénario</a>
  </div>
  
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nom</th>
      <th>Dossier</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  {% for s in scenarios %}
    <tr>
      <td>{{ s.id }}</td>
      <td><a class="link-caret" href="{{ path('scenario_show', {id: s.id}) }}">{{ s.name }}</a></td>
      <td>{{ s.folder ? s.folder.name : '-' }}</td>
      <td>
        <a class="btn btn-sm btn-secondary" href="{{ path('scenario_show', {id: s.id}) }}"><i class="bi bi-box-arrow-up-right me-1"></i>Ouvrir</a>
        <form method="post" action="{{ path('scenario_duplicate', {id: s.id}) }}" class="d-inline" onsubmit="return confirm('Dupliquer ce scénario ?');">
          <input type="hidden" name="_token" value="{{ csrf_token('dup_' ~ s.id) }}"/>
          <button class="btn btn-sm btn-outline-primary"><i class="bi bi-files me-1"></i>Dupliquer</button>
        </form>
        <form method="post" action="{{ path('scenario_delete', {id: s.id}) }}" class="d-inline" onsubmit="return confirm('Supprimer ce scénario ?');">
          <input type="hidden" name="_token" value="{{ csrf_token('del_' ~ s.id) }}"/>
          <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash me-1"></i>Supprimer</button>
        </form>
      </td>
    </tr>
  {% else %}
    <tr><td colspan="4">Aucun scénario</td></tr>
  {% endfor %}
  </tbody>
</table>
{% endblock %}
